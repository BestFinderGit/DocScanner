<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DocScanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_shadow_dark_blue</item>
        <item name="colorPrimaryVariant">@color/custom_shadow_dark_blue</item>
        <item name="colorOnPrimary">@color/custom_shadow_dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_shadow_dark_blue</item>
        <item name="colorSecondaryVariant">@color/custom_shadow_dark_blue</item>
        <item name="colorOnSecondary">@color/custom_shadow_dark_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/custom_shadow_dark_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_medium</item>

    </style>

    <style name="PdfItemTheme" parent="Theme.DocScanner">
        <item name="android:colorBackground">@color/white</item>
    </style>
</resources>