<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="2"
    android:paddingBottom="20dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back_arrow"
            android:id="@+id/imgBack"
            android:padding="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgRetake"
            android:padding="10dp"
            android:text="Retake this Snap"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:textSize="12sp"
            android:backgroundTint="@color/dark_orange_light"
            android:layout_toStartOf="@+id/imgDone"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgDone"
            android:padding="10dp"
            android:text="Done"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_green_light"
            android:layout_toStartOf="@+id/imgDelete"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_delete"
            android:id="@+id/imgDelete"
            android:padding="10dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:layout_margin="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/sourceFrame">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgEditDoc"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"/>

        </FrameLayout>

        <com.example.docscanner.other.PolygonView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/polygonView"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        tools:itemCount="5"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/edit_image_adapter_item"
        android:id="@+id/rvImages"/>

</LinearLayout>